<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_alert"
        app:layout_constraintVertical_bias="0.053"
        tools:layout_editor_absoluteX="-16dp">

    </TextView>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="60dp"


            android:background="@drawable/ic_error_outline_black_24dp"
            >

        </ImageView>

        <TextView
            android:id="@+id/textView17"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui_bold"
            android:text="Mbok ya dilengkapi to datanya"
            android:textColor="@color/color_bg"
            android:textSize="15dp"
            android:layout_gravity="center">

        </TextView>


        <Button
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_alert"
            android:layout_width="208dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_custom_3"
            android:fontFamily="@font/segoeui_bold"
            android:onClick="saveUser"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/color_bg_2"
            android:textSize="12dp"
           >

        </Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_alert"
            app:layout_constraintVertical_bias="0.053"
            tools:layout_editor_absoluteX="-16dp">

        </TextView>
</LinearLayout>

